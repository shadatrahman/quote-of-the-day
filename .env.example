# ==============================================
# QUOTE OF THE DAY - ENVIRONMENT CONFIGURATION
# ==============================================
# Copy this file to .env and fill in actual values
# Never commit .env files to version control

# ==============================================
# GENERAL CONFIGURATION
# ==============================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=info

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
# PostgreSQL Database URL
DATABASE_URL=postgresql://quote_user:quote_password@localhost:5432/quote_of_the_day_dev
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=quote_of_the_day_dev
DATABASE_USER=quote_user
DATABASE_PASSWORD=quote_password

# Database Pool Settings
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# ==============================================
# REDIS CONFIGURATION
# ==============================================
# Redis Cache URL
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ==============================================
# API CONFIGURATION
# ==============================================
API_BASE_URL=http://localhost:8000
API_HOST=0.0.0.0
API_PORT=8000
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Settings
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8080", "http://127.0.0.1:3000"]
ALLOWED_HOSTS=["localhost", "127.0.0.1"]

# ==============================================
# FIREBASE CONFIGURATION
# ==============================================
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_API_KEY=your-firebase-api-key
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_STORAGE_BUCKET=your-project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your-sender-id
FIREBASE_APP_ID=your-app-id

# Firebase Admin (Backend)
FIREBASE_ADMIN_CREDENTIALS_PATH=./secrets/firebase-admin-credentials.json
FCM_SERVER_KEY=your-fcm-server-key

# ==============================================
# AWS CONFIGURATION
# ==============================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=quote-of-the-day-assets
AWS_CLOUDFRONT_DOMAIN=your-cloudfront-domain.com

# ==============================================
# EMAIL CONFIGURATION
# ==============================================
SES_EMAIL_FROM=noreply@yourdomain.com
SES_REGION=us-east-1

# ==============================================
# STRIPE PAYMENT CONFIGURATION
# ==============================================
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ==============================================
# MONITORING & LOGGING
# ==============================================
# Sentry DSN for error tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# CloudWatch Configuration
CLOUDWATCH_LOG_GROUP=/quote-of-the-day/api
CLOUDWATCH_LOG_STREAM=api-logs

# ==============================================
# MOBILE APP CONFIGURATION (.env.local for Flutter)
# ==============================================
# These should be set in apps/mobile/.env.local
# FLUTTER_APP_ENV=development
# API_BASE_URL=http://localhost:8000
# FIREBASE_PROJECT_ID=your-firebase-project-id
# FIREBASE_API_KEY=your-firebase-api-key
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
# STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# ==============================================
# DEVELOPMENT TOOLS
# ==============================================
# Enable development features
ENABLE_SWAGGER_UI=true
ENABLE_REDOC=true
ENABLE_DEBUG_TOOLBAR=true

# Test Database (used in CI/CD)
TEST_DATABASE_URL=postgresql://test_user:test_password@localhost:5432/quote_test_db